 body {
  margin: 0;
  padding: 0;
  overflow: hidden;
  min-height: 100vh;
  background-image: url(<%= image_url("eww-botfullpage3.png") %>);
  backdrop-filter: blur(3px); /* Adjust the blur radius here */
  background-size: cover;
  background-position: right center; /* Adjust the background position here */
  font-family: 'Roboto', sans-serif;
}

.header {
    display: flex;
    justify-content: space-between; /* Aligns items to the left and right edges */
    align-items: center; /* Centers items vertically */
    padding: 0 10px; /* Padding for the header */
    text-align: center;
}

.logo {
    margin: 20px; /* Center-align the logo vertically */
    text-align: left;
}

.login {
    text-align: right;
    display: flex;
    align-items: center;
    padding: 10px 20px; /* Add padding to create a button-like appearance */
    background-color: #B22222; /* Button background color */
    border: 2px solid #8e1c1c; /* Button border */
    border-radius: 5px; /* Add rounded corners */
    cursor: pointer; /* Change cursor on hover for interaction */
    transition: background-color 0.3s, border-color 0.3s; /* Add a hover effect */

}

.avatar {
    border-radius: 100px;
    width: 30px;
    height: 30px; /* Set the height for a square avatar, adjust as needed */
    margin-right: 10px; /* Adjust the spacing between the avatar and username */
    display: flex;
    align-items: center;
}

.username {
    font-size: 20px; /* Adjust the font size as needed */
    font-weight: bold; /* Make the text bold */
    color: white; /* Text color */
    text-shadow: -1px -1px 0 black, 1px -1px 0 black, -1px 1px 0 black, 1px 1px 0 black; /* Black outline */
    text-align: center;
}

.content {
  background-color: #e7e7e7; /* Background color of the content box */
  border-radius: 10px; /* Rounded corners */
  margin: 0 20vh; /* Padding on the left and right sides */
  padding: 20px;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.2); /* Box shadow for a subtle effect */
  height: 88vh;
}

.notice {
  position: relative;
  background-color: #22b244; /* Deep Red Color */
  color: white;
  padding: 10px 10px;
  font-size: 24px;
  text-align: left;
  font-weight: bold;
  border-radius: 10px; /* Make the banner more rounded */
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
}

.alert {
  position: relative;
  background-color: #b2ab22; /* Deep Red Color */
  color: white;
  padding: 10px 10px;
  font-size: 24px;
  text-align: left;
  font-weight: bold;
  border-radius: 10px; /* Make the banner more rounded */
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
}

.close-icon {
  position: absolute;
  top: 5px; /* Adjust the top position within the .top-banner */
  right: 10px; /* Adjust the right position within the .top-banner */
  font-size: 20px;
  cursor: pointer;
}
