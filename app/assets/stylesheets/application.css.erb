 body {
  margin: 0;
  padding: 0;
  padding-bottom: 2vh;
  min-height: 98vh;
  background-image: url(<%= image_url("robo-sized-dull.png") %>);
  backdrop-filter: blur(3px); /* Adjust the blur radius here */
  background-size: cover;
  background-position: right center; /* Adjust the background position here */
  background-repeat: no-repeat;
  background-attachment: fixed;
}

a {
  text-decoration: none;
}

.fake-code {
  padding: 1rem 1.5rem;
  margin: 0 .2rem;
  font-size: 90%;
  white-space: nowrap;
  background: #F1F1F1;
  border: 1px solid #E1E1E1;
  border-radius: 4px;
  font-family: monospace, monospace;
}

.gw2-class-icon {
  width: 24px;
}

.inline-icon {
  display:flex;
  align-items: center;
}

.hidden {
  display: none;
}

.header {
    align-items: center; /* Centers items vertically */
    padding: 0 10px; /* Padding for the header */
    text-align: center;
}

.logo {
    margin: 20px; /* Center-align the logo vertically */
    text-align: left;
}

.login {
    text-align: right;
    display: flex;
    align-items: center;
    padding: 10px 20px; /* Add padding to create a button-like appearance */
    background-color: #B22222; /* Button background color */
    border: 2px solid #8e1c1c; /* Button border */
    border-radius: 5px; /* Add rounded corners */
    cursor: pointer; /* Change cursor on hover for interaction */
    transition: background-color 0.3s, border-color 0.3s; /* Add a hover effect */

}

.avatar {
    border-radius: 100px;
    width: 30px;
    height: 30px; /* Set the height for a square avatar, adjust as needed */
    margin-right: 10px; /* Adjust the spacing between the avatar and username */
    display: flex;
    align-items: center;
}

.username {
    font-size: 20px; /* Adjust the font size as needed */
    font-weight: bold; /* Make the text bold */
    color: white; /* Text color */
    text-shadow: -1px -1px 0 black, 1px -1px 0 black, -1px 1px 0 black, 1px 1px 0 black; /* Black outline */
    text-align: center;
}

.dropdown {
  position: relative;
  display: inline-block;
  cursor: pointer;
}

.dropdown-content {
  display: none;
  position: absolute;
  padding: 5px;
  background-color: #f9f9f9;
  min-width: 160px;
  box-shadow: 0 2px 4px 0 rgba(0, 0, 0, 0.2);
  z-index: 1;
}

.dropdown:hover .dropdown-content {
  display: block;
}

.dropdown-item {
  padding: 12px 16px;
  text-decoration: none;
  display: block;
}

.dropdown-item:hover {
  background-color: #ddd;
}

.content {
  background-color: #e7e7e7; /* Background color of the content box */
  border-radius: 5px; /* Rounded corners */
/*  margin: 0 20vh; /* Padding on the left and right sides */
  padding-top: 30px;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.2); /* Box shadow for a subtle effect */
  min-height: 80vh;
  max-height: 100%;
}

.notice {
  position: relative;
  background-color: #22b244; /* Deep Red Color */
  color: white;
  padding: 10px 10px;
  margin-left: 10px;
  margin-right: 10px;
  font-size: 24px;
  text-align: left;
  font-weight: bold;
  border-radius: 10px; /* Make the banner more rounded */
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
}

.alert {
  position: relative;
  background-color: #b2ab22; /* Deep Red Color */
  color: white;
  padding: 10px 10px;
  font-size: 24px;
  text-align: left;
  font-weight: bold;
  border-radius: 10px; /* Make the banner more rounded */
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
}

.close-icon {
  position: absolute;
  top: 5px; /* Adjust the top position within the .top-banner */
  right: 10px; /* Adjust the right position within the .top-banner */
  font-size: 30px;
  cursor: pointer;
}

.button-container {
  min-height: 70vh;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
}

.login-button {
  background-color: #B22222; /* Deep Red Color */
  border: 2px solid #8e1c1c; /* Button border */
  color: white;
  padding: 15px 15px;
  border-radius: 10px;
  cursor: pointer;
  font-weight: bold;
  box-shadow: 5px 5px 10px rgba(0, 0, 0, 0.2);
  transition: background-color 0.3s ease;
  z-index: 1;
  text-decoration: none;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
}

.login-button:hover {
  background-color: #8B0000; /* Darker Red on Hover */
  color: white;
}

.logout-button {
  background-color: #B22222; /* Deep Red Color */
  border: 2px solid #8e1c1c; /* Button border */
  color: white;
  border: none;
  padding: 20px 40px;
  font-size: 16px;
  border-radius: 10px;
  cursor: pointer;
  text-transform: uppercase;
  font-weight: bold;
  box-shadow: 5px 5px 10px rgba(0, 0, 0, 0.2);
  transition: background-color 0.3s ease;
  z-index: 1;
  text-decoration: none;
}

.logout-button:hover {
  background-color: #8B0000; /* Darker Red on Hover */
  color: white;
}